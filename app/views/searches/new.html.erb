<div class="row">
  <div class="col-lg-4 offset-lg-4">
        <h1>Search Result(s)</h1>
        <hr/>

        <%= form_for @search do |form| %>
            <div>
                <%= form.label :keywords, style: "display: block" %>
                <%= form.text_field :keywords, class: "form-control" %>
            </div>

            <div>
                <%= form.label :session, style: "display: block" %>
                <%= form.select :session, options_for_select(@sessions), include_blank: true %>
            </div>

            <div>
                <%= form.label :level, style: "display: block" %>
                <%= form.select :level, options_for_select(@levels), include_blank: true, class: "form-control" %>
            </div>

            <div>
                <%= form.label :semester, style: "display: block" %>
                <%= form.select :semester, options_for_select(@semesters), include_blank: true, class: "form-control" %>
            </div>

            <br>

            <div>
                <%= form.submit "Submit", class: "btn btn-success" %>
            </div>

        <% end %>
    </div>
</div>